<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_ticket" author="livanov">
        <createTable tableName="ticket">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>

            <column name="user_id" type="bigint"/>
            <column name="price" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="add_fk_constraint_user_id_ticket" author="livanov">
        <addForeignKeyConstraint baseTableName="ticket" baseColumnNames="user_id"
                                 constraintName="fkc_user_ticket"
                                 referencedTableName="user" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="destination_sequence_generator" author="livanov">
        <createSequence sequenceName="destination_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>
</databaseChangeLog>